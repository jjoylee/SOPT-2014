<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.joylee.sopt_1splash.ResultActivity">
    <ImageView
        android:id="@+id/resultImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="40dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/bluetree"
        android:tag="bluetree"/>
    <TextView
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/reusltId"
        android:text="neosopt"/>
    <TextView
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/reusltPwd"
        android:text="21234"/>
    <TextView
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/reusltName"
        android:text="김준영"/>
    <TextView
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/reusltMajor"
        android:text="컴퓨터공학"/>
    <TextView
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/reusltPart"
        android:text="안드로이드"/>
    <TextView
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/reusltSex"
        android:text="남자"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/reusltYear"
            android:text="1990년"/>
        <TextView
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/reusltMonth"
            android:text="1월"/>
        <TextView
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/reusltDay"
            android:text="1일"/>
    </LinearLayout>
    <Button
        android:layout_marginTop="3dp"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:id="@+id/login"
        android:text="로그인"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
